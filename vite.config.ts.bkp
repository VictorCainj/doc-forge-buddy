// Plugin para análise de bundle (apenas quando necessário)
function bundleAnalyzer() {
  return {
    name: 'bundle-analyzer',
    writeBundle() {
      // Trigger bundle analysis
      const { exec } = require('child_process');
      exec('npx vite-bundle-visualizer', (error) => {
        if (error) {
          console.warn('Bundle analysis not available. Install vite-bundle-visualizer for detailed analysis.');
        }
      });
    }
  };
}

