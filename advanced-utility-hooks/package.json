{
  "name": "advanced-utility-hooks",
  "version": "1.0.0",
  "description": "Biblioteca completa de hooks utilitários avançados para React/TypeScript",
  "main": "index.ts",
  "types": "index.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript",
    "utility",
    "performance",
    "validation",
    "virtual-scrolling",
    "intersection-observer",
    "debounce",
    "throttle"
  ],
  "author": "Advanced Utility Hooks Contributors",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "typescript": ">=4.1.0",
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^4.9.0",
    "zod": "^3.22.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "@testing-library/react": "^13.0.0",
    "@testing-library/jest-dom": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/advanced-utility-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/advanced-utility-hooks/issues"
  },
  "homepage": "https://github.com/your-org/advanced-utility-hooks#readme",
  "files": [
    "*.ts",
    "*.tsx",
    "*.js",
    "*.d.ts"
  ]
}